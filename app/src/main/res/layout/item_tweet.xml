<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <TextView
        android:id="@+id/tvBody"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvScreenName"
        android:layout_marginStart="5dp"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@+id/ivProfileImage"
        android:autoLink="all"
        tools:text="This Is How Great I Am" />

    <ImageView
        android:id="@+id/ivProfileImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvScreenName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/ivProfileImage"
        tools:text="darilthegreat" />

    <TextView
        android:id="@+id/date"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="35dp"
        android:layout_toEndOf="@+id/ivProfileImage" />


    <ImageView
        android:id="@+id/media"
        android:layout_width="300dp"
        android:layout_height="179dp"
        android:layout_below="@id/tvBody"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="54dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="67dp"
        tools:srcCompat="@tools:sample/avatars" />



    <TextView
        android:id="@+id/ic_comment"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_below="@id/media"
        android:layout_marginStart="60dp"
        android:layout_marginTop="5dp"
        android:drawablePadding="8dp"
        app:drawableLeftCompat="@drawable/ic_comment" />

    <TextView
        android:id="@+id/reply"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_below="@id/media"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@id/ic_comment"
        android:drawablePadding="8dp"
        app:drawableLeftCompat="@drawable/ic_reply" />


    <TextView
        android:id="@+id/ic_heart"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_below="@id/media"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@id/reply"
        android:drawablePadding="8dp"
        app:drawableLeftCompat="@drawable/ic_heart" />

    <TextView
        android:id="@+id/ic_share"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_below="@+id/media"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@id/ic_heart"
        android:drawablePadding="8dp"
        app:drawableLeftCompat="@drawable/ic_share"
        />

    <TextView
        android:id="@+id/heart_color"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_below="@id/media"
        android:layout_marginStart="16dp"
        android:layout_marginTop="-1dp"
        android:layout_toEndOf="@id/reply"
        android:drawablePadding="8dp"
        app:drawableLeftCompat="@drawable/heart_change" />

    <TextView
        android:id="@+id/ic_rep_change"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_below="@id/media"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@id/ic_comment"
        android:drawablePadding="8dp"
        app:drawableLeftCompat="@drawable/ic_reply_change" />

</RelativeLayout>